<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="20dp">

    <EditText
        android:id="@+id/groupNameInput"
        android:hint="@string/group_name"
        android:background="@drawable/custom_input"
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:paddingHorizontal="15dp"/>

    <ImageButton
        android:id="@+id/cancelGroupButton"
        android:src="@drawable/ic_cancel"
        android:background="@drawable/custom_less_rounded_button"
        android:backgroundTint="@color/delete_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/groupNameInput"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/createGroupButton"
        android:layout_marginTop="30dp"
        android:paddingVertical="5dp"
        android:paddingHorizontal="20dp" />

    <ImageButton
        android:id="@+id/createGroupButton"
        android:src="@drawable/ic_done"
        android:background="@drawable/custom_less_rounded_button"
        android:backgroundTint="@color/done_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/cancelGroupButton"
        app:layout_constraintStart_toEndOf="@id/cancelGroupButton"
        app:layout_constraintEnd_toEndOf="parent"
        android:paddingVertical="5dp"
        android:paddingHorizontal="20dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>